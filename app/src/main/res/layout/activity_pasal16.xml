<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#971E1E"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="mia.skripsi.korupsi.pasal16Activity">

    <Button
        android:id="@+id/button70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pasal 16"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView72"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setiap orang di luar wilayah negara Republik Indonesia yang memberikan bantuan, kesempatan, sarana, atau keterangan untuk terjadi` tindak pidana korupsi dipidana dengan pidana yang sama sebagai pelaku tindak pidana korupsi sebagaimana dimaksud dalam Pasal 2, Pasal 3, Pasal 5 sampai dengan Pasal 14.  "
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold"/>


    </TableLayout>

</LinearLayout>
